 <div class="row">
      <div class="col s12">
      	<h3 class="center-align">Student Directory</h3>
      </div>
  </div>

 <div class="row">
 	<% @students.each do |student| %>
	    <div class="col s6 m6">
	      <div class="card blue-grey darken-1">
	        <div class="card-content white-text">
	          <span class="card-title">Name: <%= student.name %></span>
	           <p>Email:<%= student.email %> </p>
	          <p>Course Enrollment : 
	          	<% if student.courses.empty? %>
	           	   None
	           	 <% else %>
	           	   <ul>
	           	   	 <% student.courses.each do |course| %>
	           	   	  <li><%= course.short_name %>
	           	   	 <% end %>
	           	   </ul>
	           	 <% end %>
	          </p>
	        </div>
	        <div class="card-action">
	         <%= link_to "View Profile", student_path(student) %>
	        </div>
	      </div>
	    </div>
	<% end %>
  </div>

 